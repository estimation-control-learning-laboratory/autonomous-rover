#include <Servo.h>

Servo servoX;  // Horizontal servo (Pin 9)
Servo servoY;  // Vertical servo (Pin 10)

int angleX = 90;  // define initial angle position
int angleY = 90;

void setup() {
  Serial.begin(9600); // serial communication
  servoX.attach(9); // servoX to pin 9
  servoY.attach(10);   /// servoY to pin 10
  servoX.write(angleX); // command angle position
  servoY.write(angleY);
}

void loop() {
  if (Serial.available() > 0) { // check for data reception
    char key = Serial.read();    // read the key
    
    // X-axis control (Left/Right)
    if (key == 'L') angleX = min(180, angleX + 10);  // Right
    else if (key == 'J') angleX = max(0, angleX - 10);  // Left
    
    // Y-axis control (Up/Down)
    else if (key == 'I') angleY = min(180, angleY + 10);  // Up
    else if (key == 'K') angleY = max(0, angleY - 10);  // Down
    
    // Update servos
    servoX.write(angleX);
    servoY.write(angleY);
  }
}
